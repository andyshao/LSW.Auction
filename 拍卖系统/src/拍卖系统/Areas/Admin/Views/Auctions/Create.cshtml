@model 拍卖系统.Models.Auction

@{
    ViewData["Title"] = "创建拍卖";
}
<section class="content-header">
	<h1>创建拍卖</h1>
</section>
<section class="content">
	<form asp-action="Create">
		<div class="form-horizontal">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="CreateTime" />
			<input type="hidden" asp-for="Gid" />
			<div class="form-group">
				<label asp-for="Name" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Bidnb" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="Bidnb" class="form-control" />
					<span asp-validation-for="Bidnb" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="StartTime" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="StartTime" class="form-control" />
					<span asp-validation-for="StartTime" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="EndTime" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="EndTime" class="form-control" />
					<span asp-validation-for="EndTime" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Onset" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="Onset" class="form-control" />
					<span asp-validation-for="Onset" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="StepSize" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="StepSize" class="form-control" />
					<span asp-validation-for="StepSize" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Create" class="btn btn-default" />
				</div>
			</div>
		</div>
	</form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
