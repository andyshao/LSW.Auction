@model 拍卖系统.Areas.Admin.Models.Menu

@{
	ViewData["Title"] = "编辑菜单分组";
}
<section class="content-header">
	<h1>编辑菜单分组</h1>
</section>
<section class="content">
	<form asp-action="Edit">
		<div class="form-horizontal">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Name" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="GroupICO" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="GroupICO" class="form-control" />
					<span asp-validation-for="GroupICO" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<label asp-for="ControllerName" class="col-md-2 control-label"></label>
				<div class="col-md-10">
					<input asp-for="ControllerName" class="form-control" />
					<span asp-validation-for="ControllerName" class="text-danger" />
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Save" class="btn btn-default" />
				</div>
			</div>
		</div>
	</form>
</section>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
