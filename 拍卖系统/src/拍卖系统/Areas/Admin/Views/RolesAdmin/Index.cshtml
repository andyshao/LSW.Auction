@model IEnumerable<ApplicationRole>
@{
	ViewBag.Title = "角色列表";
	ViewData["sidebar-collapse"] = "sidebar-collapse";
}
<section class="content">
	<div class="box">
		<div class="box-header">
			<div class="nav-tabs-custom">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#">角色列表</a></li>
					<li><a asp-action="Create">创建角色</a></li>
					<li class="pull-right">
						<a onclick="javascript: location.reload();"><i class="fa fa-repeat"></i> 刷新</a>
					</li>
					<li class="pull-right">
						<a onclick="javascript: history.go(-1);"><i class="fa fa-arrow-left"></i> 返回</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="box-body">
			<table class="table table-striped table-bordered">
				<tr>
					<th>
						角色名称
					</th>
					<th>
						操作
					</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							<a href="/RolesAdmin/Edit?id=@item.Id" class="btn btn-danger btn-sm">修改</a>
							<a href="/RolesAdmin/Delete?id=@item.Id" class="btn btn-default btn-sm">删除</a>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</section>