@model RoleViewModel
@{
	ViewBag.Title = "编辑角色";
}
<section class="content">
	<div class="box">
		<div class="box-header">
			<div class="nav-tabs-custom">
				<ul class="nav nav-tabs">
					<li><a href="/RolesAdmin">角色列表</a></li>
					<li><a href="/RolesAdmin/Create">创建角色</a></li>
					<li class="active"><a href="#">修改角色</a></li>
					<li class="pull-right">
						<a onclick="javascript: location.reload();"><i class="fa fa-repeat"></i> 刷新</a>
					</li>
					<li class="pull-right">
						<a onclick="javascript: history.go(-1);"><i class="fa fa-arrow-left"></i> 返回</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="box-body">
			@using (Html.BeginForm())
			{
				@Html.AntiForgeryToken()
				<div class="box box-solid box-info">
					<div class="box-header">
						<h4 class="box-title">修改角色</h4>
					</div>
					<div class="box-body">
						@Html.ValidationSummary(true)
						<table class="table table-bordered table-striped table-hover">
							<tr>
								<td><strong>角色名称:</strong></td>
								<td colspan="3">
									@Html.TextBoxFor(model => model.Name, new { @class = "input-medium" })
									@Html.ValidationMessageFor(model => model.Name)
								</td>
							</tr>
							<tr align="center">
								<td colspan="4">
									<input type="submit" value="修改" class="btn btn-primary btn_submit" />
									<a class="btn" href="/RolesAdmin">返回</a>
								</td>
							</tr>
						</table>
					</div>
				</div>
			}
		</div>
	</div>
</section>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
